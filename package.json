{
  "name": "spust",
  "version": "0.4.1",
  "description": "Quickly bootstrap universal javascript applications.",
  "keywords": [
    "webpack",
    "universal",
    "bundler"
  ],
  "main": "index.js",
  "repository": "https://github.com/michalkvasnicak/spust",
  "author": "Michal Kvasničák",
  "license": "MIT",
  "bin": {
    "spust": "bin/spust"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-prettier": "^2.1.1",
    "flow-bin": "^0.47.0",
    "flow-copy-source": "^1.1.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lint-staged": "^3.6.0",
    "prettier": "^1.4.1",
    "rimraf": "^2.6.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "prebuild": "rimraf scripts/*",
    "build:lib": "babel src --out-dir scripts",
    "build:flow": "flow-copy-source -v -i *.test.js src scripts",
    "build": "npm run build:lib && npm run build:flow",
    "prebuild:watch": "rimraf scripts/*",
    "build:watch": "babel src --watch --out-dir scripts",
    "flow": "flow check",
    "lint": "eslint src",
    "format": "eslint src --fix",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run build && jest",
    "test:watch": "npm run build && jest --watch"
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-plugin-idx": "^1.5.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-react-jsx-self": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "caniuse-db": "^1.0.30000679",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^1.1.3",
    "compression-webpack-plugin": "^0.4.0",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.28.4",
    "dotenv": "^4.0.0",
    "eslint-config-react-app": "^1.0.4",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "json-loader": "^0.5.4",
    "mz": "^2.6.0",
    "node-fetch": "^1.7.1",
    "object-assign": "^4.1.1",
    "offline-plugin": "^4.8.1",
    "postcss-apply": "^0.8.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.5",
    "progress": "^2.0.0",
    "promise": "^7.1.1",
    "react-dev-utils": "^3.0.0",
    "react-error-overlay": "^1.0.7",
    "react-loadable": "^3.3.1",
    "source-map-support": "^0.4.15",
    "style-loader": "^0.18.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-node-externals": "^1.6.0",
    "whatwg-fetch": "^2.0.3"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=7.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "7.0"
          }
        }
      ]
    ],
    "plugins": [
      "add-module-exports",
      "transform-class-properties",
      "transform-flow-strip-types",
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "plugin:flowtype/recommended",
      "prettier"
    ],
    "plugins": [
      "flowtype",
      "prettier"
    ],
    "rules": {
      "flowtype/generic-spacing": "off",
      "flowtype/no-types-missing-file-annotation": "off",
      "flowtype/space-after-type-colon": "off",
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "all",
          "singleQuote": true,
          "printWidth": 100,
          "tabWidth": 2
        }
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]",
      "flow\\.test\\.(js|jsx)$"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  }
}
